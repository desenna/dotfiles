## Navigation
alias ..='cd ..'
alias ...='cd ../../'
alias .3='cd ../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../../'

## Fix typos
alias cd..='cd ..'

## Safe operations
alias cl='clear'
alias h='history'
alias ll='ls -lah'

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

## Confirm for unsafe operations
alias cp='cp -i'
alias ln='ln -i'
alias mv='mv -i'
